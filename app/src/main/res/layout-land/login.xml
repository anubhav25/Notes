<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/login"
     >




        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_alignParentTop="true"

            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="68dp" />

        <EditText
            android:id="@+id/login_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/username"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_alignBaseline="@+id/login_pass"
            android:layout_alignBottom="@+id/login_pass"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/login_user"
            android:layout_alignLeft="@+id/login_user"
            android:layout_alignStart="@+id/login_user" />





        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autologin"
            android:gravity="center"
            android:layout_marginBottom="34dp"
            android:layout_above="@+id/login_signup"
            android:layout_centerHorizontal="true" />




        <Button
            android:id="@+id/login_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin"
            android:onClick="login_signin"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="29dp" />

        <Button
            android:id="@+id/login_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="login_register"
            android:layout_alignBaseline="@+id/login_signin"
            android:layout_alignBottom="@+id/login_signin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />




</RelativeLayout>
